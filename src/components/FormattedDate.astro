---
type DateStyle = "short" | "long" | "year";
interface Props {
  date: Date;
  style?: DateStyle;
}

const formatSettings = new Map<DateStyle, any>([
  [
    "year",
    {
      year: "numeric",
    },
  ],
  [
    "short",
    {
      year: "numeric",
      month: "short",
    },
  ],
  [
    "long",
    {
      year: "numeric",
      month: "short",
      day: "numeric",
    },
  ],
]);

const { date, style = "long" } = Astro.props;
---

<time datetime={date.toISOString()}>
  {date.toLocaleDateString("en-us", formatSettings.get(style))}
</time>
