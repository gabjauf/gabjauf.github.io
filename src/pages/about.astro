---
import Layout from "../layouts/Base.astro";
import data from "../../public/resume.json";
import FormattedDate from "../components/FormattedDate.astro";
---

<Layout title="About Me" description="Hey, I'm Gabriel ðŸ‘‹">
  <div class="flex flex-wrap justify-center gap-4 mb-4">
    <div>
      <div class="avatar">
        <div class="mask mask-hexagon w-64">
          <img src="/profile.png" class="rounded-full" alt="author avatar" />
        </div>
      </div>
      <h3 class="text-center hidden print:block">Gabriel Jauffret</h3>
    </div>
    <div class="flex-1">
      <h1>Innovative Full-stack engineer for your <i></i>tech challenges</h1>
      <p>
        Hi, I'm Gabriel, a passionate full-stack engineer living in Montreal, CA
        currently looking for a full-time job in a startup.
      </p>
    </div>
  </div>
  <div class="flex flex-wrap gap-4">
    <div class="w-64 space-y-4 sm:order-1 order-2 print:order-1">
      <section>
        <h3>Languages</h3>
        {
          data.languages.map((lang) => {
            return (
              <div>
                {lang.language}: {lang.fluency}
              </div>
            );
          })
        }
      </section>
      <!-- <section>
        <h3>Skills</h3>
        {
          data.skills.map((skill) => {
            return <span class="badge badge-outline mr-1">{skill.name}</span>;
          })
        }
      </section> -->
    </div>
    <div class="flex-1 sm:order-2 order-1 print:order-2">
      <h2>Work Experience</h2>
      {
        data.work.map((workExperience) => {
          return (
            <div class="card bg-secondary mb-4">
              <div class="card-body text-base-100 print:p-0">
                <div class="flex flex-wrap">
                  <div>
                    <h2 class="card-title">{workExperience.position}</h2>
                    <em class="capitalize">{workExperience.company}</em>
                  </div>
                  <span class="sm:ml-auto shrink-0">
                    <FormattedDate
                      date={new Date(workExperience.startDate)}
                      style={"short"}
                    />
                    â†’
                    <FormattedDate
                      date={new Date(workExperience.endDate)}
                      style={"short"}
                    />
                  </span>
                </div>
                <p class="m-0 whitespace-break-spaces">{workExperience.summary}</p>
              </div>
            </div>
          );
        })
      }
      <h2>Education</h2>
      {
        data.education.map((education) => {
          return (
            <div class="card bg-secondary mb-4">
              <div class="card-body text-base-100 print:p-0">
                <div class="flex flex-wrap">
                  <div>
                    <h2 class="card-title">{education.institution}</h2>
                    <em class="capitalize">{education.studyType}</em>
                  </div>
                  <span class="sm:ml-auto shrink-0">
                    <FormattedDate
                      date={new Date(education.startDate)}
                      style={"year"}
                    />
                    â†’
                    <FormattedDate
                      date={new Date(education.endDate)}
                      style={"year"}
                    />
                  </span>
                </div>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</Layout>
