---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      .hero-image {
        width: 100%;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .date {
        margin-bottom: 0.5em;
        font-style: italic;
      }
      .last-updated-on {
        font-style: italic;
      }
      .astro-code {
        margin-bottom: 0.5em;
      }
      @media print {
        .title {
          display: none;
        }
      }
    </style>
  </head>

  <body>
    <Header />
    <main class="container py-32 print:py-0">
      <article>
        <div class="title">
          <h1>{title}</h1>
          <hr />
        </div>
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
